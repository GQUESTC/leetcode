class Solution(object):
    def reverse(self, x):
        """
        :type x: int
        :rtype: int
        """

        a=str(x)[::-1]
        if a[-1]=='-':
            ans=a[:-1]
            b=-1*int(ans)
        elif x>2147483647 or x<-2147483647:
            b=0
        else:
            b=int(a)
        if b>2147483647 or b<-2147483647:
            return 0
        return b
        
        
