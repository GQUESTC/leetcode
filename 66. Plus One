My methodï¼š
class Solution:
    def plusOne(self, digits):
        """
        :type digits: List[int]
        :rtype: List[int]
        """
        num = 0
        for i in range(len(digits)):
            num = num*10 + digits[i]
        return ([int(i) for i in str(num+1)])
        
###########################################  
Fastest solution:
class Solution:
    def plusOne(self, digits):
        """
        :type digits: List[int]
        :rtype: List[int]
        """
        for i in range(len(digits)-1, -1, -1):
            if digits[i] != 9:
                digits[i] += 1
                break
            digits[i] = 0
        if digits[0] == 0:
            digits.insert(0, 1)
        return digits
